<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_go_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:rotation="180"
            android:visibility="invisible"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_next"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/text_reg"
            android:textColor="@color/userCenter_mainBg"
            android:text="去注册"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:rotation="0"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_next"/>

    </LinearLayout>

    <AutoCompleteTextView
        android:id="@+id/piv_login_account"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="60dp"
        android:gravity="center_vertical"
        android:background="@drawable/login_edittext_bg"
        android:drawableStart="@drawable/ic_account_normal"
        android:drawablePadding="8dp"
        android:textColor="@color/userCenter_666"
        android:hint="请输入账号"
        android:paddingStart="5dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:completionThreshold="1"
        android:singleLine="true"
        android:imeOptions="flagNoExtractUi|flagNoFullscreen"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/piv_login_password"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/piv_login_account"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/login_edittext_bg">

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:drawableStart="@drawable/ic_password_normal"
            android:drawablePadding="8dp"
            android:textColor="@color/userCenter_666"
            android:hint="请输入密码"
            android:singleLine="true"
            android:imeOptions="flagNoExtractUi|flagNoFullscreen"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textSize="15sp"/>

        <CheckBox
            android:id="@+id/cb_pwd_switch"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:button="@drawable/ic_eye_normal"
            android:gravity="center" />
    </LinearLayout>

    <Button
        android:id="@+id/sv_login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/piv_login_password"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="60dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/login_btn_bg"
        android:text="登录"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</RelativeLayout>